{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule" : true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/backend-repo/*"],
      "@/backend/*": ["apps/backend-repo/*"],
      "@/frontend/*": ["apps/frontend-repo/*"],
      "@/packages/*": ["./packages/*"]
    },
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["packages/**/*", "apps/**/*"],
  "exclude": ["node_modules", "dist"]
}